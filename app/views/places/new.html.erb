<h2>create new place</h2>
<%= form_for @place, url: places_path do |f| %>
	<div>
		<%= f.label "Name:" %><br>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label "Email" %><br>
		<%= f.email_field :email %>
	</div>
	<div>
		<%= f.label "Address line" %><br>
		<%= f.text_field :line %>
	</div>
	<div>
		<%= f.label "Address line 2" %><br>
		<%= f.text_field :line2 %>
	</div>
	<div>
		<%= f.label "Postcode" %><br>
		<%= f.text_field :postcode %>
	</div>
	<div>
		<%= f.label "City" %><br>
		<%= f.text_field :city %>
	</div>
	<div>
		<%= f.label "Country" %><br>
		<%= f.text_field :country %>
	</div>
	<div>
		<%= f.file_field :avatars, multiple: true %>
	</div>
	<div>
		<%= f.submit %>
	</div>
<% end %>
